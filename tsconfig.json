{
  "compilerOptions": {
    "lib": [
      /* Specify library files to be included in the compilation */ "esnext",
      "dom",
      "dom.iterable"
    ],
    "jsxImportSource": "vue",
    "declaration": true /* Generates corresponding '.d.ts' file. */,
    "declarationMap": true,
    "outDir": "dist",
    "sourceMap": false,
    "target": "ESNext",
    "useDefineForClassFields": false,
    "module": "ESNext",
    "moduleResolution": "node",
    "allowJs": false,
    "strict": true,
    "noUnusedLocals": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "removeComments": false,
    "jsx": "preserve",
    "rootDir": ".",
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@unimindsoftware/plugin-vue/*": [
        "./node_modules/@unimindsoftware/plugin-vue/*"
      ]
    }
  },
  "include": ["src", "test", "vite.config.ts"],
  "exclude": ["src/template", "node_modules"]
}
